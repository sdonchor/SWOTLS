<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet vista.css?>

<StackPane fx:id="vistaProfile" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
            <StackPane prefHeight="213.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="table" editable="true" minHeight="170.0" minWidth="92.0">
                     <columns>
                        <TableColumn fx:id="attributeColumn" prefWidth="48.0" text="Atrybut" />
                        <TableColumn fx:id="valueColumn" prefWidth="51.0" text="Wartość" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </StackPane>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#nextPane" text="Edytuj">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
      </children>
    </VBox>
  </children>
</StackPane>
