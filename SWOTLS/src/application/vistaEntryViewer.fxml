<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet vista.css?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="vistaProfile" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <VBox alignment="CENTER">
      <children>
            <StackPane>
               <children>
                  <TableView fx:id="table" editable="true" minHeight="170.0" minWidth="92.0">
                     <columns>
                        <TableColumn fx:id="attributeColumn" prefWidth="-1.0" text="Atrybut" />
                        <TableColumn fx:id="valueColumn" prefWidth="-1.0" text="Wartość" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </StackPane>
            <HBox alignment="TOP_CENTER">
               <children>
              <Button fx:id="actionButton" alignment="CENTER" mnemonicParsing="false" onAction="#buttonEdit" text="Edytuj">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deleteButton" alignment="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#buttonDelete" text="Usuń">
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
      </children>
    </VBox>
  </children>
</StackPane>
